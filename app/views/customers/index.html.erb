<div class="container" style="overflow-x:auto;">
    <p id="notice"><%= notice %></p>

    <h1>Customers</h1>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>SR#</th>
          <th>Name</th>
          <th>City</th>
          <th>Address</th>
          <th>Mobile</th>
          <th>Officaddress</th>
          <th>Officmobile</th>
          <th>Cost</th>
          <th>Housestatus</th>
          <th>Cnic</th>
          <th>Profession</th>
          <th>Designation</th>
          <th>Salary</th>
          <th>Cnicimg1</th>
          <th>Cnicimg2</th>
          <th>Cusimg</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @sr=0 %>
        <% @customers.each do |customer| %>
          <tr>
            <td><%=@sr+=1%></td>
            <td><%= customer.name %></td>
            <td><%= customer.city %></td>
            <td><%= customer.address %></td>
            <td><%= customer.mobile %></td>
            <td><%= customer.officaddress %></td>
            <td><%= customer.officmobile %></td>
            <td><%= customer.cost %></td>
            <td><%= customer.housestatus %></td>
            <td><%= customer.cnic %></td>
            <td><%= customer.profession %></td>
            <td><%= customer.designation %></td>
            <td><%= customer.salary %></td>
            <td><%= image_tag(customer.cnicimg1.url, size: "50x50") if customer.cnicimg1? %></td>
            <td><%= image_tag(customer.cnicimg2.url, size: "50x50") if customer.cnicimg2? %></td>
            <td><%= image_tag(customer.cusimg.url, size: "50x50") if customer.cusimg? %></td>
            <td><%= link_to 'Show', customer %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
            <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Customer', new_customer_path %>
</div>
