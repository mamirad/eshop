        </td>
      </tr>



       <tr>
        <th>
          Name
        </th>
        <td> 
          <%= @product.name %>
        </td>
      </tr>



       <tr>
        <th>
          Brand
        </th>
        <td>
         <%= @product.brand %>
        </td>
      </tr>



       <tr>
        <th>
          Model
        </th>
        <td> <%= @product.model %>
        </td>
      </tr>


       <tr>
        <th>
          color
        </th>
        <td> <%= @product.color %>
        </td>
      </tr>


       <tr>
