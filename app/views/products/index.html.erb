<p id="notice"><%= notice %></p>
<div class="container" style="overflow-x: auto;">
    <h1>Products</h1>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Name</th>
          <th>Brand</th>
          <th>Model</th>
          <th>Size</th>
          <th>Color</th>
          <th>Pprice</th>
          <th>Sprice</th>
          <th>Status</th>
          <th>create_at</th>
          <th>Update_at</th>
          <th>product Img</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.brand %></td>
            <td><%= product.model %></td>
            <td><%= product.size %></td>
            <td><%= product.color %></td>
            <td><%= product.pprice %></td>
            <td><%= product.sprice %></td>
            <td><%= product.status %></td>
            <td><%= product.created_at.to_formatted_s(:long_ordinal)  %></td>
            <td><%= product.updated_at.to_formatted_s(:long_ordinal) %></td>
           <td> <%= image_tag(product.productimg.url, size: "50x50",class:"img-thumbnail") if product.productimg? %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Product', new_product_path %>
</div>