                <td><%= link_to 'Destroy', beholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>



           <% end %>
          </tbody>
        </table>  
   
  <%= link_to 'New Beholder', new_beholder_path %>

</div>
